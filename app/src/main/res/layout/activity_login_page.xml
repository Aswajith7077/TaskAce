<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sign_in_bg_image"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:fontFamily="@font/calvier_bold"
        android:textColor="@color/white"
        android:textSize="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_alignParentBottom="true">

        <com.github.furkankaplan.fkblurview.FKBlurView
            android:id="@+id/blur_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_card_bg"
            />
        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Email"
            android:textColorHint="@color/transucent_white"
            android:fontFamily="@font/source_sans"
            android:background="@drawable/input_bg"
            android:paddingVertical="15dp"
            android:paddingLeft="25dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:autofillHints="emailAddress"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="20dp"
            android:layout_marginHorizontal="30dp"
            android:layout_above="@id/email_error_layout"
            android:layout_marginBottom="4dp"
            android:inputType="textEmailAddress"
            />
        <RelativeLayout
            android:id="@+id/email_error_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/password_layout"
            android:layout_marginHorizontal="35dp"

            android:visibility="invisible"
            >
            <TextView
                android:id="@+id/email_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="required"
                android:fontFamily="@font/source_sans"
                android:textColor="@color/red"
                android:textSize="14dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/password_error_layout"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="4dp">
            <EditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Password"
                android:textColorHint="@color/transucent_white"
                android:fontFamily="@font/source_sans"
                android:background="@drawable/input_bg"
                android:paddingVertical="15dp"
                android:paddingLeft="25dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:autofillHints="password"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="20dp"
                android:inputType="textPassword"
                />
            <ImageView
                android:id="@+id/password_toggle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/hide_password_icon"
                android:padding="15dp"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/password_error_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/forgot_password_layout"
            android:layout_marginHorizontal="35dp"
            android:visibility="invisible"
            >
            <TextView
                android:id="@+id/password_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="required"
                android:fontFamily="@font/source_sans"
                android:textColor="@color/red"
                android:textSize="14dp"
                />
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Login"
            android:textAllCaps="false"
            android:fontFamily="@font/source_sans_semibold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@drawable/button_bg"
            android:layout_marginHorizontal="30dp"
            android:layout_above="@id/link_layout_sign_in"
            android:layout_marginVertical="10dp"
            />
        <RelativeLayout
            android:id="@+id/forgot_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="35dp"
            android:layout_above="@id/login_button"
            >
            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/remember_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me"
                android:layout_toRightOf="@id/check_box"
                android:textColor="@color/white"
                android:fontFamily="@font/source_sans"
                android:textSize="18dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/forgot_password_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:fontFamily="@font/source_sans_bold"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/link_layout_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textColor="@color/white"
                android:fontFamily="@font/source_sans"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/sign_in_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:fontFamily="@font/source_sans_bold"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>